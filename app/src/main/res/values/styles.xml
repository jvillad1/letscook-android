<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- The splash theme -->
    <style name="AppTheme.Splash" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowBackground">@drawable/splash_drawable</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!-- Loading Style -->
    <style name="LoadingStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/colorLoadingOverlay</item>
        <item name="android:paddingBottom">@dimen/margin_normal</item>
        <item name="android:paddingStart">@dimen/margin_normal</item>
        <item name="android:paddingEnd">@dimen/margin_normal</item>
        <item name="android:paddingTop">@dimen/margin_normal</item>
    </style>

    <style name="ContentLoadingProgress">
        <item name="colorAccent">@color/colorPrimary</item>
    </style>

    <!-- TextView Style -->
    <style name="TextView" parent="@android:style/Widget.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:ellipsize">end</item>
    </style>

    <!-- Title Text Style -->
    <style name="TextView.Title" parent="TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">top|start</item>
        <item name="android:layout_marginStart">@dimen/margin_normal</item>
        <item name="android:layout_marginTop">@dimen/margin_small</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">start</item>
        <item name="android:textSize">25sp</item>
    </style>

    <!-- Extra Big Text Style -->
    <style name="TextView.ExtraBig" parent="TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textSize">20sp</item>
    </style>

    <!-- Big Text Style -->
    <style name="TextView.Big" parent="TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textSize">16sp</item>
    </style>

    <!-- Medium Text Style -->
    <style name="TextView.Medium" parent="TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textSize">14sp</item>
    </style>

    <!-- Small Text Style -->
    <style name="TextView.Small" parent="TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textSize">12sp</item>
    </style>

</resources>
